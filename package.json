{
  "name": "varya.me",
  "version": "3.0.0",
  "author": "Varya Stepanova <mail@varya.me>",
  "license": "MIT",
  "dependencies": {
    "@mdx-js/mdx": "^1.1.5",
    "@mdx-js/react": "^1.1.5",
    "disqus-react": "^1.0.7",
    "from": "^0.1.7",
    "gatsby": "^2.24.82",
    "gatsby-image": "^2.2.8",
    "gatsby-plugin-catch-links": "^2.1.25",
    "gatsby-plugin-manifest": "^2.4.35",
    "gatsby-plugin-mdx": "^1.2.48",
    "gatsby-plugin-offline": "^2.2.4",
    "gatsby-plugin-page-creator": "^2.3.33",
    "gatsby-plugin-postcss": "^2.1.20",
    "gatsby-plugin-react-helmet": "^3.1.3",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-sharp": "^2.6.43",
    "gatsby-plugin-styled-components": "^3.1.19",
    "gatsby-remark-images": "^3.3.36",
    "gatsby-remark-prismjs": "^3.5.1",
    "gatsby-remark-reading-time": "^1.1.0",
    "gatsby-source-filesystem": "^2.3.35",
    "gatsby-transformer-sharp": "^2.5.18",
    "import": "^0.0.6",
    "postcss-browser-reporter": "^0.6.0",
    "postcss-easy-media-query": "^1.0.0",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-reporter": "^6.0.1",
    "postcss-text-remove-gap": "^1.1.1",
    "prismjs": "^1.20.0",
    "prop-types": "^15.7.2",
    "rc-spider": "git+ssh://git@github.com/intergalactico/spider.git#master",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-icons": "2.2.7",
    "styled": "^1.0.0",
    "styled-components": "^3.4.10",
    "styled-css-grid": "^1.2.1"
  },
  "keywords": [
    "gatsby",
    "varya",
    "blog",
    "design systems"
  ],
  "scripts": {
    "build": "gatsby build",
    "start": "npm run develop",
    "develop": "gatsby develop",
    "devhost": "gatsby develop --host 192.168.0.112",
    "format": "prettier --write 'src/**/*.js'",
    "lint-errors": "eslint \"src/**/*.{js,jsx}\" --quiet",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "stylelint": "stylelint src/**/*.js",
    "styleguidist:server": "npx styleguidist server",
    "styleguidist:build": "npx styleguidist build",
    "generate-app-icons": "sh ./scripts/generate-app-icons.sh",
    "deploy:build": "npm run styleguidist:build && gatsby build --prefix-paths && npm run deploy:remove-extra",
    "deploy:release": "git-directory-deploy --directory ./public --repo varya --branch master",
    "deploy:remove-extra": "rm public/*.js.map",
    "deploy": "npm run deploy:build && npm run deploy:release",
    "test:visual": "cd styleguide/ && npx styleguidist-visual test --url http://localhost:6060/",
    "test:visual:approve": "cd styleguide/ && npx styleguidist-visual approve"
  },
  "peerDependencies": {
    "gatsby": ">=1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "babel-plugin-dynamic-import-webpack": "^1.1.0",
    "babel-plugin-import": "^1.13.0",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.21.5",
    "gatsby-plugin-styled-jsx": "^3.1.19",
    "gatsby-plugin-styled-jsx-postcss": "^2.0.2",
    "gatsby-remark-autolink-headers": "^2.3.3",
    "git-directory-deploy": "^1.5.1",
    "husky": "^4.3.0",
    "img-loader": "^3.0.1",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "react-styleguidist": "^11.0.8",
    "styled-components-breakpoint": "^2.1.1",
    "styled-components-grid": "^2.2.1",
    "styled-jsx": "^3.2.4",
    "styled-jsx-plugin-postcss": "^2.0.1",
    "styled-jsx-plugin-stylelint": "^0.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,md,mdx}": "prettier --write",
    "*.js": "prettier --write"
  }
}
